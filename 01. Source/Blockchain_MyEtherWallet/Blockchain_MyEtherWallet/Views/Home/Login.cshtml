@model Blockchain_MyEtherWallet.Models.User

@{
    ViewBag.Title = "Login";
}
<h2>@ViewBag.Title</h2>

@if (ViewBag.Account != "")
{
    <p style="color:red;">You are logged in</p>
    using (@Html.BeginForm("Logout", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Log out</button>
    }
}
else
{
    using (@Html.BeginForm("CheckLogin", "Home", FormMethod.Post))
    {

        @Html.AntiForgeryToken()

        <h5 style="color:red;">@ViewBag.Alert</h5>
        <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            @Html.TextBoxFor(s => s.Email, "", new { @type = "email", @class = "form-control", @placeholder = "Email" })
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            @Html.TextBoxFor(s => s.Password, "", new { @type = "password", @class = "form-control", @placeholder = "Password" })
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Remember me</label>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    }
}

